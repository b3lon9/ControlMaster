<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bright_button_corner_normal" />
            <solid android:color="@color/turquoise_tone3" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bright_button_corner_selected" />
            <solid android:color="@color/turquoise_tone2" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bright_button_corner_pressed" />
            <solid android:color="@color/turquoise_tone2" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bright_button_corner_normal" />
            <solid android:color="@color/turquoise_tone4" />
        </shape>
    </item>
</selector>