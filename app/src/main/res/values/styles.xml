<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi">

    <!--bright-->
    <style name="bright_button_style">
        <item name="android:background">@drawable/bright_button_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--seekbar-->
    <style name="common_seekbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_seekbar_height</item>
        <item name="android:layout_marginTop">@dimen/common_seekbar_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/common_seekbar_margin_bottom</item>
        <item name="android:splitTrack">false</item>
    </style>
</resources>